<h1 align="center">Usuarios</h1>

<div class="row justify-content-sm-center">
  <div class="col-sm-6">
    <table class="table">
      <thead class="thead-light">
        <tr>
          <th scope="col">Email</th>
          <th scope="col" style="text-align: right;"><%= link_to "Crear Usuario", new_admin_user_path, class: "btn btn-primary btn-sm" %></th>
        </tr>
      </thead>

      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.email %></td>
            <td style="text-align: right;">
              <div class="btn-group" role="group" aria-label="User management">
                <%= link_to "Ver", [:admin, user], class: "btn btn-info btn-sm", type: "button" %>
                <% if current_user == user %>
                  <%= link_to "Editar", edit_user_registration_path, class: "btn btn-warning btn-sm", type: "button" %>
                <% else %>
                  <%= link_to "Editar", edit_admin_user_path(user), class: "btn btn-warning btn-sm", type: "button" %>
                <% end %>
                <%= link_to "Eliminar", admin_user_path(user), method: :delete, data: { confirm: "Â¿Seguro que quieres eliminar a este usuario?" }, class: "btn btn-danger btn-sm", type: "button" %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>