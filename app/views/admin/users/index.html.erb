<h1 align="center">Usuarios</h1>

<div class="row justify-content-sm-center">
  <div class="col-sm-6">
    <table class="table">
      <thead class="thead-light">
        <tr>
          <th scope="col">Email</th>
          <th scope="col" style="text-align: right;"><%= link_to "Crear Usuario", new_admin_user_path, class: "btn btn-primary btn-sm" %></th>
        </tr>
      </thead>

      <tbody>
          <% @users.each do |user| %>
            <tr>
              <td colspan="2"><%= user.email %></td>
            </tr>
          <% end %>
      </tbody>
    </table>
  </div>
</div>