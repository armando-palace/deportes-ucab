<h1 align="center">Todos los Deportes</h1>

<div class="row justify-content-sm-center">
  <div class="col-sm-6">
    <table class="table">
      <thead class="thead-light">
        <tr>
          <th scope="col">Deporte</th>
          <th scope="col" style="text-align: center;">Cantidad de Torneos</th>
          <th scope="col" style="text-align: right;">
            <%= link_to "Agregar Deporte", new_sport_path, class: "btn btn-primary btn-sm" %>
          </th>
        </tr>
      </thead>

      <tbody>
        <% @sports.each do |sport| %>
          <tr>
            <td><%= sport.name %></td>
            <td style="text-align: center;"><%= sport.tournaments.count %></td>
            <td style="text-align: right;">
              <div class="btn-group" role="group" aria-label="User management">
                <%= link_to "Ver", sport, class: "btn btn-info btn-sm", type: "button" %>
                <%= link_to "Editar", edit_sport_path(sport), class: "btn btn-warning btn-sm", type: "button" %>
                <%= link_to "Eliminar", sport, method: :delete, data: { confirm: "¿Seguro que quieres eliminar este deporte? Se eliminarán todos los torneos asociados a él" }, class: "btn btn-danger btn-sm", type: "button" %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
