<h1 align="center"><%= @sport.name %></h1>

<div class="row">
  <div class="col-sm-12">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title" align= "center"><b>Torneos</b> <%= link_to "Crear", new_sport_tournament_path(@sport) , class: "btn btn-primary btn-sm" %></h5>
      </div>
    </div>
  </div>
</div>


<div class="row">
  <div class="col-sm-12">
    <div class="card">
      <div class="card-body">
        <% if @tournament.present? %>
        <h1 align="center">Torneos Actuales:</h1>
        <div class="card-body">
          <% @tournament.each do |f| %>
          <h5 class="card-title" align= "center"><%= link_to "#{f.name}", sport_tournament_path(@sport,f.id) , class: "btn btn-primary btn-sm" %></h5>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
