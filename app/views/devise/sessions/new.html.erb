<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css"> <!-- Se importó el css de W3 Schools -->
  <div class="w3-row-padding w3-margin-top">
    <div class="w3-third">
      <div class="w3-card w3-container">
        </div>
  </div>
  <div class="w3-third">
      <div class="w3-card w3-container" style="margin:50px 20px;">
              <div class="w3-row-padding" style="margin:2px 50px;"> <!-- (2) espacio al inicio del container -->
              </div>

              <div class="w3-container" style="margin:8px 0px;"> <!-- Título -->
                  <h2 align="center">INICIA SESIÓN</h2>
                  <p>  </p>
              </div>

                <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                  <div class="w3-row-padding">
                    <%= f.label "Correo"%>
                    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
                  </div>
                  <div class="w3-row-padding">
                    <%= f.label "Contraseña"%>
                    <%= f.password_field :password, autocomplete: "current-password" %>
                  </div>

                  <% if devise_mapping.rememberable? -%>
                    <div class="field">
                      <%= f.check_box :remember_me %>
                      <%= f.label "Recordarme" %>
                    </div>
                  <% end -%>

                  <div class="w3-row-padding w3-center" style="margin:10px 20px;">
                    <%= f.submit "Entrar" , class: 'btn btn-primary btn-flat m-b-1 m-t-1 col-md-12' %>
                  </div>
                <% end %>

                <%= render "devise/shared/links" %>
        </div>
		 </div>
  </div>
